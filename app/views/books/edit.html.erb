    <p id="notice"></p>
      <div class="container">
        <div class="row">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
           <h1>Editing Book</h1>
           
      
             <%= form_with model: @book do |f| %>
             <div class="form-group">
             <label for="inputName">Title</label><br>
             <%= f.text_field :title, autofocus: true, id:"inputtitle"%>
             </div>
             <div class="form-group">
             <label for="inputIntroduction">Opinion</label><br>
             <%= f.text_field :body %>
             </div>
             <div class="form-group">
             <%= f.submit "Update Book", class: 'btn btn-success' %>
             <% end %>
             </form>
             <br>
            <%= link_to "Show", book_path(@book.id) %>
            |
  		      <%= link_to "Back", books_path %>
             
             </div>
           
          </div>
        </div>
      </div>
 